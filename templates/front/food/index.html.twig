{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}

{% block body %}
    <h1>Tout les aliments</h1>
    {% include('layout/_link_table.html.twig')  %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Date d'expiration</th>
                <th>Périmé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food in food %}
            <tr>
                <td>{{ food.name }}</td>
                <td>{{ food.quantity }}</td>
                <td>{{ food.expirationDate ? food.expirationDate|date('Y-m-d') : '' }}</td>
                <td>{{ food.isOutOfDate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('front_food_show', {'id': food.id}) }}">show</a>
                    <a href="{{ path('front_food_edit', {'id': food.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'aliments trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('front_food_new') }}">Create new</a>
{% endblock %}
