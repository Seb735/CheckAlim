{% extends 'base.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <h1>Food</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ food.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ food.name }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ food.quantity }}</td>
            </tr>
            <tr>
                <th>ExpirationDate</th>
                <td>{{ food.expirationDate ? food.expirationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsOutOfDate</th>
                <td>{{ food.isOutOfDate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ food.createdAt ? food.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ food.updatedAt ? food.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('front_food_index') }}">back to list</a>

    <a href="{{ path('front_food_edit', {'id': food.id}) }}">edit</a>

    {{ include('front/food/_delete_form.html.twig') }}
{% endblock %}
